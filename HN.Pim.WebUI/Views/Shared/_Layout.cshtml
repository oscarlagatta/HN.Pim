<!DOCTYPE html>
<html>
<head>
    <base href="/">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PIM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body data-ng-app="appMain">
    <div class="container">
        <div class="row">
            <header class="hn-header">
                <a href="Default.html">HARVEY NICHOLS</a>
            </header>
            <div id=”Menu”>
                @Html.Action("MenuIndex", "MenuItem")
            </div>
           
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <script type="text/javascript">

        window.eCommerce = {};
        (function (cr) {
            var rootPath;
            cr.rootPath = rootPath;
        }(window.eCommerce));
        eCommerce.rootPath = '@Url.Content("~")';
    </script>
    <script src="~/Scripts/moment.js" type="text/javascript"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>

    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="@Url.Content("~/Scripts/App.js")" type="text/javascript"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        @RenderSection("footerScript", required: false)
    </script>
</body>

